//- paginator
mixin paginator(layout)
  if layout == 'home' || layout == 'archive'
    - var prev = page.prev_link
    - var next = page.next_link
  else if layout == 'post'
    - var prev = page.prev ? page.prev.path : false;
    - var next = page.next ? page.next.path : false;
    
  .paginator
    if page.prev || prev
      a.prev(href=url_for(prev) class='hint--top-right hint--error hint--rounded' aria-label=page.prev.title)
        
        i.iconfont.icon-left
        span 
          != __('prev')
    if page.next || next
      a.next(href=url_for(next) class='hint--top-left hint--error hint--rounded' aria-label=page.next.title)
        span
          != __('next')
        i.iconfont.icon-right
