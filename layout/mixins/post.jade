//- Index Pages
mixin posts()
    ul.home.post-list
        - page.posts.each(function (item) {
            li.post-list-item
                article.post-block
                    h2.post-title
                        span
                            i.fa.fa-link
                        a.post-title-link(href=url_for(item.path))
                            != item.title
                    .post-time
                        != full_date(item.date, 'll')
                    .post-content
                        != item.excerpt
                    a.read-more(href=url_for(item.path))
                        != __('more')
        - })

//- Archive Page
mixin postList()
    .archive
        - var year = 0;
        - var change = false;
        - page.posts.each(function (item) {
            - var itemYear = date(item.date, 'YYYY') - 0;
            - change = year !== itemYear;
            - year = change ? itemYear : year;
            if change
                h2.archive-year
                    != year
            .post-item
                .post-time
                    != full_date(item.date, 'll')
                a.post-title-link(href=url_for(item.path))
                    != item.title
        - })

//- Post Page
mixin post(item)
    .post
        article.post-block
            h1.post-title
                span
                    i.fa.fa-link
                != item.title
            .post-time
                != full_date(item.date, 'll')
            .post-content
                != item.content