//- social
if theme.social && is_home()
  div.social
    for link, name in theme.social
      a.iconfont(class="icon-#{name}" href=url_for(link)) 

//- Copyright
.copyright
  - var currentDate = new Date()
  - var year = currentDate.getFullYear()
  - var since = config.since
  if since
    - year = year == since ? year : since + '-' + year
  - copyright = '&copy;' + year
    
  p
    != copyright
    span.heart
      i.fa.fa-heart
    span.author
      != config.author
  p.theme
    != "Theme by " 
    
    a(href="https://github.com/ahonn/hexo-theme-even") 
      != "Even"
    
//- Back to top
label#back2top
  i.fa.fa-chevron-up
